@model  Intitek.Welcome.UI.ViewModels.Admin.ConfirmDeleteViewModel
<div class="modal fade" id="deleteDial" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <input type="hidden" id="IsDeleted" name="IsDeleted" value="@Model.IsDeleted" />
            <div class="modal-header modal-delete">
                <span id="modalDelete"><i class="fas fa-exclamation-triangle"></i>&nbsp;&nbsp;&nbsp;<span>@Resource.modalTitleDeleteItem</span></span>
            </div>
            <div class="modal-body">
                @if (Model.CanDelete)
                {

                    <form method="post" action="@Url.Action(!string.IsNullOrEmpty(Model.ActionName) ? Model.ActionName : "Delete", Model.ControllerName, new { Area = "Admin", Id = Model.ID, IsDeleted = Model.IsDeleted})">

                        <p>@Html.Raw(string.Format(Resource.dialogDeleteMessage, Model.EntityName))&nbsp;<span class="label-warning delete-content">@HttpUtility.HtmlDecode(Model.Name)</span> ?</p>
                        <div class="modal-bouton-action">
                            <a href="#" class="btn btn-dark btn-wme btn-xs" data-dismiss="modal" rel="modal:close">@Resource.buttonNo</a>
                            <input type="submit" id="modalBtnDelete" class="btn btn-danger btn-wme btn-xs" value="@Resource.buttonYes" onclick="openLoading();"/>
                        </div>

                    </form>

                }
                else
                {

                    <p>@Html.Raw(string.Format(Resource.dialogCannotDeleteMessage, @Model.EntityName))&nbsp;<span class="label-error delete-content">@HttpUtility.HtmlDecode(Model.Name)</span></p>
                    <div class="modal-bouton-action">
                        <a href="#" class="btn btn-dark btn-wme btn-xs" data-dismiss="modal" rel="modal:close">@Resource.btnClose</a>
                    </div>

                }
            </div>
        </div>
    </div>
</div>