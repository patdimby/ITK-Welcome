<div id="deleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <input type="hidden" id="IDtoDelete" name="IDtoDelete" value="" />
        <input type="hidden" id="controller" name="controller" value="" />

        <div class="modal-content">
            <div class="modal-header modal-delete">
                <span id="modalDelete"><i class="fas fa-exclamation-triangle"></i>&nbsp;&nbsp;&nbsp;<span>@Resource.modalTitleDeleteItem</span></span>
            </div>
            <div class="modal-body">
                <p></p>
                <div class="modal-bouton-action">
                    <a href="#" class="btn btn-dark btn-wme btn-xs" data-dismiss="modal" rel="modal:close">@Resource.buttonNo</a>
                    <input type="button" id="modalBtnDelete" class="btn btn-danger btn-wme btn-xs" value="@Resource.buttonYes" />
                </div>
            </div>
        </div>
    </div>
</div>
