        td.actions {
            padding: 0px;
        }

        td.actions a {
            margin-right: 10px;
        }

        #relanceModal .modal-dialog {
            max-width: 35% !important;
        }

        .modal-body input[type=radio] {
            display: inline-block;
        }

        .modal-body label {
            margin-bottom: 10px;
        }

        .col-profil {
            min-width: 300px;
            max-width: 300px;
        }
    </style>
}
