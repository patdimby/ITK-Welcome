                                        <input type="hidden" id="filtre" name="filtre">
                                        <button type="button"
                                                class="btn btn-white margin-right opacity-1 btn-search" onclick="submitForm(this)">
                                            <label for="filter-2"><i class="fa fa-search"></i></label>
