@model  Intitek.Welcome.UI.Web.Admin.Models.GridBO<ProfilViewModel>
@{
    ViewBag.Title = string.Format("Administration | {0}", @Resource.profilLists);
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Styles
