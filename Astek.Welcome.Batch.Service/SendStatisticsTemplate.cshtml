@using Astek.Welcome.Batch.Service
@*@using Microsoft.AspNet.Razor;
@inherits RazorEngine.Templating.TemplateBase<SendStatisticModel>*@
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <style type="text/css">
        body {
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
            color: #3d405c;
        }

        .content {
            width: 100%;
        }

        .card {
            width: 75%;
            margin-bottom: 30px;
            border: none;
            -webkit-box-shadow: 0px 1px 2px 1px rgba(154, 154, 204, 0.22);
            -moz-box-shadow: 0px 1px 2px 1px rgba(154, 154, 204, 0.22);
            box-shadow: 0px 1px 2px 1px rgba(154, 154, 204, 0.22);
            padding: 20px;
            border-radius: 16px;
            background-color: #fbfbfb;
        }

        .progress,
        .progress-bar {
            height: 26px;
        }

        .progress {
            background-color: rgba(52, 191, 53, 0.8);
            border-radius: 5px !important;
        }

        .progress-bar {
            background-color: rgb(0, 156, 73);
            ;
            border-radius: 5px 0px 0px 5px;
            display: flex;
            -ms-flex-direction: column;
            flex-direction: column;
            -ms-flex-pack: center;
            justify-content: center;
            color: #fff;
            text-align: left;
            white-space: nowrap;
            padding-left: 10px;
        }

        .statistic {
            width: 100%;
        }

            .statistic tbody tr {
                height: 36px;
                background-color: rgb(174, 168, 174);
            }

            .statistic thead th {
                font-weight: bold;
            }

            .statistic tbody td {
                padding-right: 5px;
                width: 25%;
            }

            .statistic .agency-name,
            .statistic thead th:first-child {
                padding-left: 10px;
            }

        .divider {
            padding-top: 1.2rem;
        }

        .chart-image {
            width: 100%;
        }
    </style>
    <title>Administration | Statistiques &amp; Analyse</title>
</head>
<body>
    <div class="content" align="center">
        <div class="card">
            <div align="center">
                <h2 class="center">Statistiques &amp; Analyse</h2>
            </div>
            <div class="card-body" align="left">
                <div class="divider">&nbsp;</div>
                <h3>Vision globale</h3>
                <!-- ========== IMAGE OF CHART ============== -->
                <!-- Insert here the image of 3 charts        -->
                <div class="chart-image" align="center">
                    <img title="Vision globale" alt="#url_of_chart#" src="#url_of_chart#" />
                </div>
                <!-- End of image insertion                   -->
                <!-- ======================================== -->
                <!-- ============================================================== -->
                <!-- To loop for all selected Entities/Agencies                     -->
                <div class="divider">&nbsp;</div>
                <!-- Agency name -->
                <h3>@Model.EntityName</h3>
                <div>
                    <table class="statistic" border="0" cellspacing="0" cellpadding="0">
                        <!-- Table header to repeat on each entity -->
                        <thead>
                            <tr>
                                <th align="left"><span>Nom de l'agence</span></th>
                                <th><span>Lecture : Nb de collab. à relancer</span></th>
                                <th><span>Approbation : Nb de collab. à relancer</span></th>
                                <th><span>Test : Nb de collab. à relancer</span></th>
                            </tr>
                        </thead>
                        <!-- End of entity's header -->
                        <tbody>
                            <!-- Selected agencies of current entity (to loop for all agencies) -->
                            <tr>
                                <td class="agency-name">@Model.AgencyName</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: @Model.PercentItemsRead;">
                                            <span>@Model.ReadItemsCount / @Model.ItemsCount</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar " role="progressbar" style="width: @Model.PercentItemsApproved;">
                                            <span class="value">@Model.ApprovedItemsCount / @Model.ItemsToApproveCount</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar " role="progressbar" style="width: @Model.PercentItemsTested;">
                                            <span class="value">@Model.TestedPassedItemsCount / @Model.ItemsToTestCount</span>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <!-- End of one line -->
                        </tbody>
                    </table>
                </div>
                <!-- End of entity section             -->
                <!-- ================================= -->
            </div>
        </div>
    </div>
</body>
</html>